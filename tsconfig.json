{
  "compilerOptions": {
    "target": "ES2020",
    "types": ["jest", "node"],
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
